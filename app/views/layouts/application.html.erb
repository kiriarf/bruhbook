<!DOCTYPE html>
<html>
  <head>
    <title>Bruhbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="wrapper">
      <header>
          <h1>BruhBook <%= link_to root_path do %>
            <span><%= image_tag("bruh.png") %></span>
          <% end %></h1>
        <h3>The only place to keep it real</h3>

        <div class="login">
          <% if !logged_in? %>
            <%= link_to "Log In", login_path %>
            </div>
            <div class="log-out">
            <%= link_to "Sign Up", signup_path %>
            </div>
          <% else %>
        <div class="log-out">
          <h2>What' up, <%= current_user.name %></h2>
          <%= link_to 'New Post', new_post_path %>
          <%= link_to "Log Out", logout_path, method: :delete %>
        </div>
        <%end%>
      </header>

      
      <section class="container">
      <div class="left-img banner"></div>

      <section class="main-content">
        <%= yield %>
      </section>


      <div class="right-img banner"></div>
      </section>

      <footer>Bruhbook &reg; 2020</footer>
    </section>

</body>
</html>
