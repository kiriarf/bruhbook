<!DOCTYPE html>
<html>
  <head>
    <title>Bruhbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="wrapper">
      <header>
        <%= link_to root_path do %>
          <%= image_tag("bruh.png") %>
        <% end %>
        <h1>Bruhbook</h1>
      </header>

      

      <section class="main-content">
        <section class="left-menu">
          <% if logged_in? %>
            <h2>What' up, <%= current_user.name %></h2>
            <%= button_to "Feed", root_path, method: :get %>
            <%= button_to "My Account", user_path(current_user), method: :get %>
            <%= button_to 'New Post', new_post_path, method: :get %>
            <%= button_to 'My Bruhs', root_path, method: :get %>
            <%= button_to 'Test Item', root_path, method: :get %>
            <%= button_to "Log Out", logout_path, method: :delete %>
          <% else %>
            <%= button_to "Log In", login_path, method: :get%>
            <%= button_to "Sign Up", signup_path, method: :get%>
          <% end %>
        </section>
        <%= yield %>
      </section>

      <div class="right-content" <%= image_tag("singles-img.jpg") %>
      </div>

      <footer>Bruhbook &reg; 2020</footer>
    </section>

</body>
</html>
