<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Text content</th>
      <th>Img url</th>
      <th>Yes bruhs</th>
      <th>Bullshit bruhs</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text_content %></td>
        <td><%= post.img_url %></td>
        <td><%= post.yes_bruhs %></td>
        <td><%= post.bullshit_bruhs %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


