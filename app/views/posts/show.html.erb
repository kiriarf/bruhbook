<p id="notice"><%= notice %></p>

<div class="single-post">

  <p><strong>Text: </strong>
    <%= @post.text_content %>
  </p>

  <p><strong>Picture:</strong>
    <%= @post.img_url %>
  </p>


  <p><strong>Posted By: </strong>
    <% user = User.find(@post.user_id)%>
    <%= user.name %>
  </p>

  <p><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
  <p><%= @post.bullshits.count %> <%= (@post.bullshits.count) == 1 ? 'Bullshit' : 'Bullshits bruh!!!'%></p>

  <%= button_to 'Yes Bruh', post_likes_path(@post), method: :post %>
  <%= button_to 'Bullshit', post_bullshits_path(@post), method: :post %>

  <%= link_to 'Edit', edit_post_path(@post) %>
</div>